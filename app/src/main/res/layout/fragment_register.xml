<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".tabSplashFragments.RegisterFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/nameRegisterSplashStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.02"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/nameRegisterSplashEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.98"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/nameRegisterSplashTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.02"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/nameRegisterSplashBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.15"/>

    <EditText
        android:id="@+id/nameRegisterSplash"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/nameRegisterSplashTop"
        app:layout_constraintBottom_toTopOf="@id/nameRegisterSplashBottom"
        app:layout_constraintStart_toStartOf="@id/nameRegisterSplashStart"
        app:layout_constraintEnd_toEndOf="@id/nameRegisterSplashEnd"
        android:inputType="textPersonName"
        android:hint="Name"
        android:textColor="@color/appBlue"
        android:drawableStart="@drawable/ic_personicon"
        android:drawablePadding="7dp"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/emailRegisterSplashTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.18"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/emailRegisterSplashBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.33"/>

    <EditText
        android:id="@+id/emailRegisterSplash"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/emailRegisterSplashTop"
        app:layout_constraintBottom_toTopOf="@id/emailRegisterSplashBottom"
        app:layout_constraintStart_toStartOf="@id/nameRegisterSplashStart"
        app:layout_constraintEnd_toEndOf="@id/nameRegisterSplashEnd"
        android:hint="Email"
        android:textColor="@color/appBlue"
        android:drawableStart="@drawable/ic_mailcxy"
        android:drawablePadding="7dp"
        android:inputType="textEmailAddress"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/mobileRegisterSplashTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.36"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/mobileRegisterSplashBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.49"/>

    <EditText
        android:id="@+id/mobileRegisterSplash"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/mobileRegisterSplashTop"
        app:layout_constraintBottom_toTopOf="@id/mobileRegisterSplashBottom"
        app:layout_constraintStart_toStartOf="@id/nameRegisterSplashStart"
        app:layout_constraintEnd_toEndOf="@id/nameRegisterSplashEnd"
        android:hint="Mobile Number"
        android:textColor="@color/appBlue"
        android:drawableStart="@drawable/ic_nineone"
        android:drawablePadding="7dp"
        android:inputType="phone"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/getOtpRegisterSplashStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.7"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/getOtpRegisterSplashTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/getOtpRegisterSplashBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.54"/>

    <TextView
        android:id="@+id/getOtpViewSignUpRegisterSplash"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/getOtpRegisterSplashTop"
        app:layout_constraintBottom_toTopOf="@id/getOtpRegisterSplashBottom"
        app:layout_constraintStart_toStartOf="@id/getOtpRegisterSplashStart"
        app:layout_constraintEnd_toEndOf="@id/nameRegisterSplashEnd"
        android:fontFamily="@font/ptsans"
        android:textColor="@color/appBlue"
        android:gravity="center|end"
        android:text="Get OTP"
        tools:ignore="UnusedAttribute"
        android:textStyle="bold" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/otpRegisterSplashTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.57" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/otpRegisterSplashBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.7" />

    <EditText
        android:id="@+id/otpRegisterSplash"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/otpRegisterSplashTop"
        app:layout_constraintBottom_toTopOf="@id/otpRegisterSplashBottom"
        app:layout_constraintStart_toStartOf="@id/nameRegisterSplashStart"
        app:layout_constraintEnd_toEndOf="@id/nameRegisterSplashEnd"
        android:hint="OTP"
        android:textColor="@color/appBlue"
        android:drawableStart="@drawable/ic_otpicon"
        android:drawablePadding="7dp"
        android:inputType="number"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/registerBtnSplashStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.2"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/registerBtnSplashEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.8"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/registerBtnSplashTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.75"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/registerBtnSplashBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.9"/>

    <Button
        android:id="@+id/signInBtnRegisterSplash"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/registerBtnSplashTop"
        app:layout_constraintBottom_toTopOf="@id/registerBtnSplashBottom"
        app:layout_constraintStart_toStartOf="@id/registerBtnSplashStart"
        app:layout_constraintEnd_toEndOf="@id/registerBtnSplashEnd"
        android:text="Sign In"
        android:textAllCaps="false"
        android:textSize="20sp"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:foreground="@drawable/my_button"
        android:fontFamily="@font/ptsans"
        android:textStyle="bold"
        android:textColor="@color/appBlue"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/alreadyAccountRegisterSplashTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.92"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/alreadyAccountRegisterSplashBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.98"/>

    <TextView
        android:id="@+id/alreadyAccountTextSignUpRegisterSplash"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/alreadyAccountRegisterSplashTop"
        app:layout_constraintBottom_toTopOf="@id/alreadyAccountRegisterSplashBottom"
        app:layout_constraintStart_toStartOf="@id/registerBtnSplashStart"
        app:layout_constraintEnd_toEndOf="@id/registerBtnSplashEnd"
        android:fontFamily="@font/ptsans"
        android:textColor="@color/appBlue"
        android:gravity="center"
        android:text="Already have an account? Login."
        android:textStyle="bold"/>

</androidx.constraintlayout.widget.ConstraintLayout>