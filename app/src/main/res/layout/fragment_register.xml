<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".TabSplashFragments.RegisterFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/nameRegisterSplashStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.02"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/nameRegisterSplashEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.98"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/nameRegisterSplashTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.02"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/nameRegisterSplashBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.15"/>

    <EditText
        android:id="@+id/nameRegisterSplash"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/nameRegisterSplashTop"
        app:layout_constraintBottom_toTopOf="@id/nameRegisterSplashBottom"
        app:layout_constraintStart_toStartOf="@id/nameRegisterSplashStart"
        app:layout_constraintEnd_toEndOf="@id/nameRegisterSplashEnd"
        android:inputType="textPersonName"
        android:hint="Name"
        android:textColor="@color/appBlue"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/emailRegisterSplashTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.18"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/emailRegisterSplashBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.33"/>

    <EditText
        android:id="@+id/emailRegisterSplash"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/emailRegisterSplashTop"
        app:layout_constraintBottom_toTopOf="@id/emailRegisterSplashBottom"
        app:layout_constraintStart_toStartOf="@id/nameRegisterSplashStart"
        app:layout_constraintEnd_toEndOf="@id/nameRegisterSplashEnd"
        android:hint="Email"
        android:textColor="@color/appBlue"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/mobileRegisterSplashTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.36"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/mobileRegisterSplashBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.49"/>

    <EditText
        android:id="@+id/mobileRegisterSplash"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/mobileRegisterSplashTop"
        app:layout_constraintBottom_toTopOf="@id/mobileRegisterSplashBottom"
        app:layout_constraintStart_toStartOf="@id/nameRegisterSplashStart"
        app:layout_constraintEnd_toEndOf="@id/nameRegisterSplashEnd"
        android:hint="Mobile Number"
        android:textColor="@color/appBlue"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/getOtpRegisterSplashStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.7"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/getOtpRegisterSplashTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/getOtpRegisterSplashBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.54"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/getOtpRegisterSplashTop"
        app:layout_constraintBottom_toTopOf="@id/getOtpRegisterSplashBottom"
        app:layout_constraintStart_toStartOf="@id/getOtpRegisterSplashStart"
        app:layout_constraintEnd_toEndOf="@id/nameRegisterSplashEnd"
        android:fontFamily="@font/ptsans"
        android:textColor="@color/appBlue"
        android:gravity="center"
        android:text="Get OTP" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/otpRegisterSplashTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.57" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/otpRegisterSplashBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.7" />

    <EditText
        android:id="@+id/otpRegisterSplash"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/otpRegisterSplashTop"
        app:layout_constraintBottom_toTopOf="@id/otpRegisterSplashBottom"
        app:layout_constraintStart_toStartOf="@id/nameRegisterSplashStart"
        app:layout_constraintEnd_toEndOf="@id/nameRegisterSplashEnd"
        android:hint="OTP"
        android:textColor="@color/appBlue"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/registerBtnSplashStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.25"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/registerBtnSplashEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.75"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/registerBtnSplashTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.75"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/registerBtnSplashBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.9"/>

    <com.google.android.material.button.MaterialButton
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/registerBtnSplashTop"
        app:layout_constraintBottom_toTopOf="@id/registerBtnSplashBottom"
        app:layout_constraintStart_toStartOf="@id/registerBtnSplashStart"
        app:layout_constraintEnd_toEndOf="@id/registerBtnSplashEnd"
        app:backgroundTint="@color/appBlue"
        android:text="Sign In"
        android:textAllCaps="false"
        android:fontFamily="@font/ptsans"
        android:textSize="20sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>