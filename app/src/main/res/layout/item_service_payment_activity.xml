<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/itemImgItemServicePaymentActivityStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.01"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/itemImgItemServicePaymentActivityEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.2"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/itemImgItemServicePaymentActivityTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="10dp"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/itemImgItemServicePaymentActivityBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="80dp"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/imgViewItemServicePaymentActivityStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.02"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/imgViewItemServicePaymentActivityEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.19"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/imgViewItemServicePaymentActivityTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="14dp"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/imgViewItemServicePaymentActivityBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="76dp"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/textItemServicePaymentActivityStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.25"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/textItemServicePaymentActivityEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.85"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/textItemServicePaymentActivityTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="20dp"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/textItemServicePaymentActivityBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="45dp"/>

    <TextView
        android:id="@+id/textItemServicePaymentActivity"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/textItemServicePaymentActivityTop"
        app:layout_constraintBottom_toTopOf="@id/textItemServicePaymentActivityBottom"
        app:layout_constraintStart_toStartOf="@id/textItemServicePaymentActivityStart"
        app:layout_constraintEnd_toEndOf="@id/textItemServicePaymentActivityEnd"
        android:autoSizeTextType="uniform"
        android:gravity="center_vertical"
        android:elevation="11dp"
        android:fontFamily="@font/ptsans"
        android:textStyle="bold"
        android:textColor="@color/appBlue"/>

    <ImageView
        android:id="@+id/imgViewItemServicePaymentActivity"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/imgViewItemServicePaymentActivityTop"
        app:layout_constraintBottom_toTopOf="@id/imgViewItemServicePaymentActivityBottom"
        app:layout_constraintStart_toStartOf="@id/imgViewItemServicePaymentActivityStart"
        app:layout_constraintEnd_toEndOf="@id/imgViewItemServicePaymentActivityEnd"
        android:elevation="11dp"/>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/itemImgItemServicePaymentActivityTop"
        app:layout_constraintBottom_toTopOf="@id/itemImgItemServicePaymentActivityBottom"
        app:layout_constraintStart_toStartOf="@id/itemImgItemServicePaymentActivityStart"
        app:layout_constraintEnd_toEndOf="@id/itemImgItemServicePaymentActivityEnd"
        android:background="@drawable/rounded_square_slidepanel_homefragment"
        android:elevation="10dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>