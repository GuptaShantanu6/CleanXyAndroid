           android:orientation="horizontal"
           app:layout_constraintGuide_begin="820dp"/>

       <Button
           android:id="@+id/confirmSlotBtnBookingActivity"
           android:layout_width="0dp"
           android:layout_height="0dp"
           app:layout_constraintTop_toTopOf="@id/confirmBookBtnBookingActivityTop"
           app:layout_constraintBottom_toTopOf="@id/confirmBookBtnBookingActivityBottom"
           app:layout_constraintStart_toStartOf="@id/backBtnBookingActivityStart"
           app:layout_constraintEnd_toEndOf="@id/recViewServiceBookingActivityEnd"
           style="@style/Widget.MaterialComponents.Button.TextButton"
           android:foreground="@drawable/my_button"
           android:textAppearance="?attr/textAppearanceBody1"
           android:text="Confirm Booking"
           android:textColor="@color/appBlue"
           android:fontFamily="@font/ptsans"
           android:textSize="25sp"
           android:textAllCaps="false"/>

       <com.github.florent37.materialtextfield.MaterialTextField
           android:layout_width="0dp"
           android:layout_height="0dp"
           app:layout_constraintStart_toStartOf="@id/couponDefBookingActivityStart"
           app:layout_constraintEnd_toEndOf="@id/couponDefBookingActivityEnd"
           app:layout_constraintTop_toBottomOf="@id/couponCodeBookingActivityTop"
           app:layout_constraintBottom_toTopOf="@id/couponCodeBookingActivityBottom"
           android:elevation="11dp"
           app:mtf_labelColor="@color/appBlue"
           app:mtf_image="@drawable/ic_coupon_icon"
           app:mtf_openKeyboardOnFocus="true">

           <EditText
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:hint="Enter Code"
               android:textColor="@color/appBlue"
               android:textSize="15sp"
               android:fontFamily="@font/ptsans"
               android:inputType="text"/>

       </com.github.florent37.materialtextfield.MaterialTextField>

       <ImageView
           android:layout_width="0dp"
           android:layout_height="0dp"
           app:layout_constraintTop_toBottomOf="@id/couponDefBookingActivityTop"
           app:layout_constraintBottom_toTopOf="@id/couponDefBookingActivityBottom"
           app:layout_constraintStart_toStartOf="@id/couponDefBookingActivityStart"
           app:layout_constraintEnd_toEndOf="@id/couponIconBookingActivityEnd"
           android:src="@drawable/ic_coupon_icon"
           android:elevation="11dp"/>

       <TextView
           android:layout_width="0dp"
           android:layout_height="0dp"
           app:layout_constraintTop_toBottomOf="@id/couponDefBookingActivityTop"
           app:layout_constraintBottom_toTopOf="@id/couponDefBookingActivityBottom"
           app:layout_constraintEnd_toEndOf="@id/couponDefBookingActivityEnd"
           app:layout_constraintStart_toStartOf="@id/couponIconBookingActivityEnd"
           android:autoSizeTextType="uniform"
           android:textColor="@color/appBlue"
           android:gravity="center_vertical"
           android:text="Apply Coupon"
           android:elevation="11dp"
           android:fontFamily="@font/ptsans"/>

       <View
           android:layout_width="0dp"
           android:layout_height="0dp"
           app:layout_constraintStart_toStartOf="@id/backBtnBookingActivityStart"
           app:layout_constraintEnd_toEndOf="@id/recViewServiceBookingActivityEnd"
           app:layout_constraintTop_toBottomOf="@id/couponViewBookingActivityTop"
           app:layout_constraintBottom_toTopOf="@id/couponViewBookingActivityBottom"
           android:background="@drawable/rounded_square_slidepanel_homefragment"
           android:elevation="10dp"/>

<!--       <androidx.recyclerview.widget.RecyclerView-->
<!--           android:id="@+id/addressRecyclerViewBookingActivity"-->
<!--           android:layout_width="0dp"-->
<!--           android:layout_height="0dp"-->
<!--           app:layout_constraintStart_toStartOf="@id/backBtnBookingActivityStart"-->
<!--           app:layout_constraintEnd_toEndOf="@id/recViewServiceBookingActivityEnd"-->
