           app:layout_constraintTop_toBottomOf="@id/backBtnBookingActivityTop"
           app:layout_constraintBottom_toTopOf="@id/backBtnBookingActivityBottom"
           app:layout_constraintStart_toStartOf="@id/backBtnBookingActivityStart"
           app:layout_constraintEnd_toEndOf="@id/backBtnBookingActivityEnd"
           android:src="@drawable/ic_back_cxy"/>

       <ImageView
           android:layout_width="0dp"
           android:layout_height="0dp"
           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintStart_toEndOf="@id/bgBookingActivityStart"
           app:layout_constraintBottom_toTopOf="@id/bgBookingActivityBottom"
           android:src="@drawable/back_booking"
           android:scaleType="fitXY"
           android:adjustViewBounds="true"/>

