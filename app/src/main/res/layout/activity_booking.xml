           android:id="@+id/servicesRecyclerViewBookingActivity"
           android:layout_width="0dp"
           android:layout_height="0dp"
           app:layout_constraintTop_toBottomOf="@id/recViewServiceBookingActivityTop"
           app:layout_constraintBottom_toTopOf="@id/recViewServiceBookingActivityBottom"
           app:layout_constraintStart_toStartOf="@id/backBtnBookingActivityStart"
           app:layout_constraintEnd_toEndOf="@id/recViewServiceBookingActivityEnd"
           android:elevation="1dp"
           tools:listitem="@layout/item_service_booking_activity"/>

