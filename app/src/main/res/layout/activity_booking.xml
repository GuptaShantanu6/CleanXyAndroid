           android:layout_width="0dp"
           android:layout_height="0dp"
           app:layout_constraintTop_toBottomOf="@id/scheduleSlotTextBookingActivityTop"
           app:layout_constraintBottom_toTopOf="@id/scheduleSlotTextBookingActivityBottom"
           app:layout_constraintStart_toStartOf="@id/backBtnBookingActivityStart"
           app:layout_constraintEnd_toEndOf="@id/scheduleSlotTextBookingActivityEnd"
           android:textColor="@color/appBlue"
           android:autoSizeTextType="uniform"
           android:gravity="center_vertical"
           android:text="Schedule Slot"
           android:textStyle="bold"
           android:elevation="1dp"
           android:fontFamily="@font/ptsans"/>

