           android:layout_height="0dp"
           app:layout_constraintTop_toTopOf="@id/addAddressBtnBookingActivityTop"
           app:layout_constraintBottom_toTopOf="@id/addAddressBtnBookingActivityBottom"
           app:layout_constraintStart_toStartOf="@id/backBtnBookingActivityStart"
           app:layout_constraintEnd_toEndOf="@id/addAddressBtnBookingActivityEnd"
           style="@style/Widget.MaterialComponents.Button.TextButton"
           android:foreground="@drawable/my_button"
           android:textAppearance="?attr/textAppearanceBody1"
           android:text="Edit Address"
           android:textColor="@color/appBlue"
           android:fontFamily="@font/ptsans"
           android:textSize="18sp"
           android:textAllCaps="false"/>

       <TextView
           android:id="@+id/addressTextBookingActivity"
           android:layout_width="0dp"
           android:layout_height="0dp"
           app:layout_constraintTop_toBottomOf="@id/addressContentBookingActivityTop"
           app:layout_constraintBottom_toTopOf="@id/addressContentBookingActivityBottom"
           app:layout_constraintStart_toStartOf="@id/backBtnBookingActivityStart"
           app:layout_constraintEnd_toEndOf="@id/recViewServiceBookingActivityEnd"
           android:fontFamily="@font/ptsans"
           android:elevation="1dp"
           android:textColor="@color/appBlue"
           android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Suspendisse eu pharetra nisl, a ornare ex. Pellentesque feugiat velit quis volutpat placerat. Nam ac ante pellentesque, viverra velit non, bibendum sem."
           android:textSize="18sp"/>

       <TextView
           android:layout_width="0dp"
           android:layout_height="0dp"
           app:layout_constraintTop_toBottomOf="@id/addressTextBookingActivityTop"
           app:layout_constraintBottom_toTopOf="@id/addressTextBookingActivityBottom"
           app:layout_constraintStart_toStartOf="@id/backBtnBookingActivityStart"
           app:layout_constraintEnd_toEndOf="@id/approxTextBookingActivityEnd"
           android:fontFamily="@font/ptsans"
           android:textColor="@color/appBlue"
           android:gravity="center_vertical"
           android:elevation="1dp"
           android:autoSizeTextType="uniform"
           android:text="Address : "/>

       <TextView
           android:id="@+id/priceTextBookingActivity"
           android:layout_width="0dp"
           android:layout_height="0dp"
           app:layout_constraintTop_toBottomOf="@id/approxTextBookingActivityTop"
           app:layout_constraintBottom_toTopOf="@id/approxTextBookingActivityBottom"
           app:layout_constraintStart_toStartOf="@id/approxTextBookingActivityEnd"
           app:layout_constraintEnd_toEndOf="@id/recViewServiceBookingActivityEnd"
           android:gravity="center"
           android:textColor="@color/appBlue"
           android:textStyle="bold"
           android:fontFamily="@font/ptsans"
           android:elevation="1dp"
           android:autoSizeTextType="uniform"
           android:text="Loading..." />

       <TextView
           android:layout_width="0dp"
           android:layout_height="0dp"
           app:layout_constraintTop_toBottomOf="@id/approxTextBookingActivityTop"
           app:layout_constraintBottom_toTopOf="@id/approxTextBookingActivityBottom"
           app:layout_constraintStart_toStartOf="@id/backBtnBookingActivityStart"
           app:layout_constraintEnd_toEndOf="@id/approxTextBookingActivityEnd"
           android:gravity="center_vertical"
           android:autoSizeTextType="uniform"
           android:textColor="@color/appBlue"
           android:textStyle="bold"
           android:text="Approx price for 1 hour : "
           android:fontFamily="@font/ptsans"
           android:elevation="1dp" />

