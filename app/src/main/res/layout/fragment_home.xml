<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".bottomNavFragments.HomeFragment">

    <com.google.android.gms.maps.MapView
        android:id="@+id/map_view_home_fragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/placeSearchStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.03"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/placeSearchEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.85"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/placeSearchTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.02"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/placeSearchBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.08"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/searchLocationTextTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.033"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/searchLocationTextBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.067"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/searchLocationTextStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/searchLocationTextEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.71"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toEndOf="@id/searchLocationTextStart"
        app:layout_constraintEnd_toEndOf="@id/searchLocationTextEnd"
        app:layout_constraintTop_toBottomOf="@id/searchLocationTextTop"
        app:layout_constraintBottom_toTopOf="@id/searchLocationTextBottom"
        android:textColor="@color/black"
        android:autoSizeTextType="uniform"
        android:gravity="center_vertical"
        android:text="Search Location"
        android:elevation="11dp"
        android:fontFamily="@font/robotoregular" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@id/searchLocationTextEnd"
        app:layout_constraintEnd_toEndOf="@id/placeSearchEnd"
        app:layout_constraintTop_toBottomOf="@id/searchLocationTextTop"
        app:layout_constraintBottom_toTopOf="@id/searchLocationTextBottom"
        android:src="@drawable/ic_baseline_search_24"
        android:elevation="11dp"/>

    <View
        android:id="@+id/searchLocationBarHomeFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/placeSearchTop"
        app:layout_constraintBottom_toTopOf="@id/placeSearchBottom"
        app:layout_constraintStart_toEndOf="@id/placeSearchStart"
        app:layout_constraintEnd_toEndOf="@id/placeSearchEnd"
        android:elevation="10dp"
        android:background="@drawable/rounded_rectangle_home"/>

    <com.sothree.slidinguppanel.SlidingUpPanelLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        

    </com.sothree.slidinguppanel.SlidingUpPanelLayout>

</androidx.constraintlayout.widget.ConstraintLayout>